<div class="container-field main">
 <div class="col-md-8 col-md-offset-2">
  <h2>ジャンル編集画面</h2>
    <%= form_for(@genre, url: admin_genre_path) do |f| %>
      <div class="form">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, class: "form" %>

        <%= f.radio_button :is_valid, :true %>
        <%= f.label :is_valid, "有効" %>
        <%= f.radio_button :is_valid, :false %>
        <%= f.label :is_valid, "無効" %>
      
        <%= f.submit "更新する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
