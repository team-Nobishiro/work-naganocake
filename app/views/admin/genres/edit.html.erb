<div class="container">
  <div class="row">
    <h2>ジャンル編集画面</h2>
  </div>
    <%= form_for(@genre, url: admin_genre_path) do |f| %>
      <div class="form-group row">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, class: "form" %>

      <div class="form">
        <%= f.radio_button :is_valid, :true %>
        <%= f.label :is_valid, "有効" %>
        <%= f.radio_button :is_valid, :false %>
        <%= f.label :is_valid, "無効" %>
      </div>

      <div class="row">
        <%= f.submit "更新する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
