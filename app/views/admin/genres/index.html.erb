<div class="container">

  <div class="row">
    <h2>ジャンル追加・一覧</h2>
  </div>
 
  <strong>新規ジャンル登録</strong>

   <%= form_for(@genre, url: admin_genres_path) do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-check">
          <%= f.radio_button :is_valid, :true %>
          <%= f.label :is_valid, "有効" %>
          <%= f.radio_button :is_valid, :false %>
          <%= f.label :is_valid, "無効" %>
        </div>

        <div class="row">
          <%= f.submit "追加", class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
 <table class="table">
    <thead>
       <tr>
          <th>ジャンル</th>
          <th>状態</th>
        </tr>
     </thead>

     <tbody>
          <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>
           <% if genre.is_valid == true %>
                有効
           <% else %>
                無効
           <% end %>
           </td>
           <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-warning" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

