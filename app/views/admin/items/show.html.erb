<div class="container my-5">
  <div class="row">
    <h3>商品詳細</h3>
  </div>

  <div class="row mt-3">
    <div class="offset-sm-1 col-sm-3">
      <%= attachment_image_tag @item, :image, format: "jpeg", fallback: 'noimage.jpg', size: '200x200' %>
    </div>

    <div class="col-sm-4">
      <table class="table table-noborder">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>

          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>

          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>

          <tr>
            <td>税込価格(税抜価格)</td>
            <td>
              <%= (@item.not_taxprice * 1.1).floor %>(<%= @item.not_taxprice %>)円
            </td>
          </tr>

          <tr>
            <td>販売ステータス</td>
            <td><%= @item.is_sale_status %></td>
          </tr>
        </tbody>

      </table>
    </div>
  </div>

  <div class="row">
    <div class="offset-sm-9 col-sm-2">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
    </div>
  </div>
</div>