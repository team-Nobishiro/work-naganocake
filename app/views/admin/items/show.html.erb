<div class="container main">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-2">
      <h3>商品詳細</h3>
      <%= attachment_image_tag @item, :image, format: "jpeg", fallback: 'noimage.jpg', size: '200x200' %>
    </div>
    <div class="col-xs-4 itempage">
      <table class="table table-noborder">
        <tbody>
          <tr>
            <td class="">商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td class="">商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td class="">ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td class="">税込価格(税抜価格)</td>
            <td>
              <%= (@item.not_taxprice * 1.1).floor %>(<%= @item.not_taxprice %>)円
            </td>
          </tr>
          <tr>
            <td class="">販売ステータス</td>
            <td class="">
              <% if @item.is_sale_status == false %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4 col-xs-offset-2 margin-top-20">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
    </div>
  </div>
</div>