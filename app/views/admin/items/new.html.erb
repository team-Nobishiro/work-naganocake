<div class="container">
  <div class="row">
    <h3>商品新規登録</h3>
    <div class="col-xs-4">
    <%= form_for(@item_new, url: admin_items_path, method: :post) do |f| %>
      <%= f.attachment_field :image %>
    </div>

    <div class="col-xs-7">
      <label for="item_name">商品名</label>
      <%= f.text_field :name, class: "form-control", :style=>"width:150px;" %>

      <label for="item_introduction">商品説明</label>
      <%= f.text_field :introduction, class: "form-control", :style=>"width:150px;" %>

      <label for="genre">ジャンル</label>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control", :style=>"width:150px;" %><br>

      <label for="not_taxprice">税抜価格</label>
      <%= f.text_field :not_taxprice, class: "form-control", :style=>"width:150px;" %>円<br>

      <label for="sale_status">販売ステータス</label>
      <%= f.select :is_sale_status, [['販売中',false],['販売停止中',true]], { include_blank: true, selected: 0 } %><br>

      <%= f.submit "新規登録", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>