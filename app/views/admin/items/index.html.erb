<div class="container my-5">
  <div class="row">
    <h3>商品一覧画面</h3>
  </div>
  <div class="row text-right">
    <%= link_to "➕", new_admin_item_path, class: "btn btn-default btn-circle" %>
  </div>

  <div class="row mt-1">
    <table class="table table-hover">

  </div>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item), :style=>"color:pink;" %></td>
            <td><%= item.not_taxprice %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_sale_status == false %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>

          
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<div class="container">
  <div class="row">
   <div class="col-md-4 offset-md-4 py-2  mt-5">
   </div>
  </div>
</div>

</div>