<div class="container main">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-2">
      <h3>商品編集</h3>
      <%= form_for(@item, url: admin_item_path) do |f| %>
        <%= f.label :商品画像 %>
        <%= f.attachment_field :image %>
    </div>
    <div class="col-xs-5 itempage">
        <div class="form-group">
          <%= f.label :商品名, class: "edit-u" %>
          <%= f.text_field :name, class: "edit-user" %>
        </div>
        <div class="form-group">
          <%= f.label :商品説明, class: "edit-u" %>
          <%= f.text_area :introduction, class: "edit-user" %>
        </div>
        <div class="form-group">
          <%= f.label :ジャンル, class: "edit-u" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "edit-user" %>
        </div>
        <div class="form-group">
          <%= f.label :税抜き価格, class: "edit-u" %>
          <%= f.text_field :not_taxprice, class: "edit-user" %>
          <span class="mt-auto ml-3">円</span>
        </div>
        <div class="form-group">
          <%= f.label :販売ステータス, class: "edit-u" %>
          <%= f.select :is_sale_status, [['販売中',false],['販売停止中',true]], { include_blank: true, selected: 0 } %><br>
        </div>
      </div>
      <div class="col-xs-3 col-xs-offset-8">
        <%= f.submit :編集する, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

</div>