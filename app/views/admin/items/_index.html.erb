<table class='table table-hover table-inverse'>
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% items.each do |item| %>
      <tr>
        <td>
          <%= attachment_image_tag item, :image, format: "jpeg", fallback: 'noimage.jpg', size: '200x200' %>
        </td>
        <td><%= item.name %></td>
        <td><%= item.introduction %></td>
      </tr>
    <% end %>
  </tbody>
</table>