<table class="user-info">
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% items.each do |item| %>
      <tr>
        <th>
          <%= attachment_image_tag item, :image, format: "jpeg", fallback: 'noimage.jpg', size: '50x50' %>
        </th>
        <th><%= item.name %></th>
        <th><%= item.introduction %></th>
      </tr>
    <% end %>
  </tbody>
</table>