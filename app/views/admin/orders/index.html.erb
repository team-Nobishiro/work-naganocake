<div class="container">
  <h2>注文履歴一覧</h2>
  <div class="row mt-1">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |o| %>
          <% @count = 0 %>
          <% o.order_items.each do |oi| %>
            <% if oi.number != nil %>
              <% @count += oi.number %>
            <% end %>
          <% end %>
          <tr>
            <td><%= o.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td><%= o.end_user.last_name + o.end_user.first_name %></td>
            <td><%= @count %></td>
            <td><%= o.select %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= paginate @orders %>
