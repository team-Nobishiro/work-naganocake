<div class="container main">
  <h2>注文履歴詳細</h2>
  <div class="row mt-1">
    <div>
      <p>注文情報</p>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y年%m月%d日') %> </td>
          <tr>
          <tr>
            <td>配送先</td>
            <td>
              <%= @order.postal_code %><br>
              <%= @order.address %> <br>
              <%= @order.address_name %>
            </td>
          <tr>
          <tr>
            <td>支払方法</td>
            <td>
              <% if @order.payment_way == 0 %>
                クレジットカード
              <% else %>
                銀行振込
              <% end %>
            </td>
          <tr>
          <tr>
            <td>ステータス</td>
            <td><%= @order.select %> </td>
          <tr>
        </tbody>
      </table>
    </div>
    <div>
      <p>請求情報</p>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>商品合計</td>
            <td><%= @order.toral_price %></td>
          <tr>
          <tr>
            <td>配送料</td>
            <td><%= @order.send_price %> </td>
          <tr>
          <tr>
            <td>ご請求額</td>
            <td><%= @order.toral_price + @order.send_price%></td>
          <tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mt-1">
    <div>
      <p>注文内容</p>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |o| %>
            <tr>
              <th><%= o.item.name %></th>
              <th><%= o.tax_price %></th>
              <th><%= o.number %></th>
              <th><%= o.number * o.tax_price %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>