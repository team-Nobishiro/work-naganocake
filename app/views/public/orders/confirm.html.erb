<div class="container">
  <div class="row">
    <h3>注文情報確認</h3>
  </div>

      <table class="table table-borderless table-sm">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @current_end_user.cart_items.each do |cart| %>
            <tr class="brown-border">
              <td>
                <%= attachment_image_tag cart.item, :image, :size => '50x50',fallback: "noimage.jpg" %>
                <span> </span>
                <%= cart.item.name %>
              </td>

             
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

    <div class="col-2 d-flex">

      <table class="table table-sm table-borderless align-self-end">
        <tbody>
          <tr class="brown-border">
            <td>送料</td>
            <td>800</td>

          </tr>

          <tr class="brown-border">
            <td>商品合計</td>
            <td><%= (current_end_user.cart_total_price * 1.1).floor%>円</td>
          </tr>

          <tr class="brown-border">
            <td>請求金額</td>
             <td><%= ((current_end_user.cart_total_price * 1.1) + 800).floor%>円</td>
            

           
          </tr>

        </tbody>
      </table>

    </div>
  </div>

  <div class="row mt-5">
    <div class="offset-2 col-6">
      <div class="row mt-3">
        <strong class="red-border px-3 mr-3">支払方法</strong>
        <span class="brown-border px-3"><%= session[:payment_way] %></span>
      </div>

      <div class="row mt-3">
        <strong class="red-border px-3 mr-3">　お届け先　</strong>
        <span class="brown-border px-3">
          
        </span>
      </div>
    </div>

    <div class="col-3">
      <%=link_to "購入を確定する", public_orders_thank_path, class: "btn btn-success" %>
    </div>

  </div>
</div>