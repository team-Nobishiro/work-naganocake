<div class="container main">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

    <div class="col-xs-3">
      <%= render partial: 'shared/genre_search', locals: { genres: @genres } %>
    </div>
    <div class="col-xs-9">
    	<h2 class="title"><%= @genre.name %>一覧</h2>
      <% @genre.items.each do |item| %>
        <div class="item-box">
    <div class="img_wrap">
       <div class="box-inline">
            <%= link_to public_item_path(item.id) do %>
               <%= attachment_image_tag item, :image, format: 'jpeg', class: "", size: "160x140" %>
            <% end %>
           <div>
          <%= link_to item.name, public_item_path(item.id) %><br>
          <%= item.not_taxprice %>円(税抜)
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
</div>
</div>
