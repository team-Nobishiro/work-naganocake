<div class="container">
  
  <div class="row">
  
  <div class="col-md-4 col-md-offset-4">
<h2>新規登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  　<%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder:"性 例 新垣" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder:"名 例 結衣"%>
  </div>

  <div class="field">
    <%= f.label :フリガナ %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana",placeholder:"セイ 例 アラガキ" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",placeholder:"セイ 例 ユイ"%>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"例 huge@gmail.com"%>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",placeholder:"例 1234567"%>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
  </div>
  
  <div class="field">
    <%= f.label :パスワード（6文字以上） %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %> 
<%= render "devise/shared/links" %>
</div>
</div>
</div>
